@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
 
@inject IViewLocalizer Localizer

<h1>@Localizer["Title"]</h1>

<h3>@Localizer["Subtitle"]</h3>
<div>
    <h4>@Localizer["Subtitle2"]</h4>
    <hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Localizer["Field1"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>
		<dt class="col-sm-2">
			@Localizer["Field2"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ReleaseDate)
		</dd>
		<dt class="col-sm-2">
			@Localizer["Field3"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Genre)
		</dd>
		<dt class="col-sm-2">
			@Localizer["Field4"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			@Localizer["Field5"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Rating)
		</dd>
	</dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="@Localizer["Button"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["LinkBack"]</a>
    </form>
</div>
